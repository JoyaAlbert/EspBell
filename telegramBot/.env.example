# Configuración del Bot de Telegram con MQTT
# 
# IMPORTANTE: Renombra este archivo a .env y configura tus valores

# Token del bot de Telegram
TOKEN=tu_token_aqui

# Configuración del broker MQTT
MQTT_BROKER=192.168.1.210
MQTT_PORT=1883

# Configuración de reconexión MQTT
RECONNECT_DELAY=5
MAX_RECONNECT_ATTEMPTS=0

# Configuración de notificaciones de conexión MQTT
# Por defecto: false (no notifica problemas de conexión)
# Cambiar a 'true' si quieres recibir notificaciones de desconexión/reconexión
NOTIFY_CONNECTION_ISSUES=false

# Ejemplos de configuración:
# NOTIFY_CONNECTION_ISSUES=false   # NO envía notificaciones de conexión (recomendado)
# NOTIFY_CONNECTION_ISSUES=true    # SÍ envía notificaciones de conexión
